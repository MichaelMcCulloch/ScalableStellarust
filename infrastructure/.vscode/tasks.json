{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "vagrant up --parallel",
			"group": "build",
			"label": "Spawn Virtual Machines"
		},
		{
			"type": "shell",
			"command": "vagrant up --parallel --provision",
			"group": "build",
			"label": "Provision Virtual Machines"
		},
		{
			"type": "shell",
			"command": "vagrant destroy --parallel",
			"group": "build",
			"label": "Destroy Virtual Machines"
		},
		{
			"type": "shell",
			"command": "vagrant halt",
			"group": "build",
			"label": "Halt Virtual Machines"
		}
	]
}