{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Build"
		},
		{
			"type": "cargo",
			"command": "check",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Check"
		},
		{
			"type": "cargo",
			"command": "clean",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Clean"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "Test"
		},
		{
			"type": "docker-build",
			"label": "Build Docker Image",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-unzipping-service"
			},
			"group": "build",
			"dependsOn": [
				"Check",
				"Test"
			]
		},
		{
			"type": "shell",
			"label": "Save Docker Image To tar",
			"group": "build",
			"command": [
				"docker",
				"save",
				"stellarust-unzipping-service:latest",
				">",
				"stellarust-unzipping-service.tar",
			],
		},
		{
			"type": "shell",
			"label": "Compress tar",
			"group": "build",
			"command": [
				"xz",
				"-T32",
				"-9",
				"stellarust-unzipping-service.tar"
			]
		},
		{
			"type": "shell",
			"label": "move compressed tarxz to the infrastructure images pool",
			"group": "build",
			"command": [
				"mv",
				"stellarust-unzipping-service.tar.xz",
				"../../../infrastructure/docker_images"
			]
		},
		{
			"label": "Export Docker Image",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build Docker Image",
				"Save Docker Image To tar",
				"Compress tar",
				"move compressed tarxz to the infrastructure images pool"
			]
		}
	]
}