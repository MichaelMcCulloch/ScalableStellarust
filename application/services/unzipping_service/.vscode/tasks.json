{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Unzipping::Build"
		},
		{
			"type": "cargo",
			"command": "check",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Unzipping::Check"
		},
		{
			"type": "cargo",
			"command": "clean",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Unzipping::Clean"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Service::Unzipping::Run"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "Service::Unzipping::Test"
		},
		{
			"type": "docker-build",
			"label": "Service::Unzipping::Docker::Build",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-unzipping-service"
			},
			"group": "build",
			"dependsOn": [
				"Check",
				"Test"
			]
		},
		{
			"type": "shell",
			"label": "Service::Unzipping::Docker::SaveTar",
			"group": "build",
			"command": [
				"docker",
				"save",
				"stellarust-unzipping-service:latest",
				">",
				"stellarust-unzipping-service.tar",
			],
		},
		{
			"type": "shell",
			"label": "Service::Unzipping::Docker::CompressXz",
			"group": "build",
			"command": [
				"xz",
				"-T32",
				"-9",
				"stellarust-unzipping-service.tar"
			]
		},
		{
			"type": "shell",
			"label": "Service::Unzipping::Docker::SHA256",
			"group": "build",
			"command": [
				"sha256sum",
				"stellarust-unzipping-service.tar.xz",
				">",
				"stellarust-unzipping-service.sha256"
			]
		},
		{
			"type": "shell",
			"label": "Service::Unzipping::Docker::Move",
			"group": "build",
			"command": [
				"mv",
				"stellarust-unzipping-service.{tar.xz,sha256}",
				"../../../infrastructure/docker_images"
			]
		},
		{
			"label": "Service::Unzipping::Docker::Extract",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Service::Unzipping::Docker::Build",
				"Service::Unzipping::Docker::SaveTar",
				"Service::Unzipping::Docker::CompressXz",
				"Service::Unzipping::Docker::SHA256",
				"Service::Unzipping::Docker::Move",
			]
		}
	]
}