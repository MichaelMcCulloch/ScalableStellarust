{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Parsing::Build"
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Parsing::Check"
		},
		{
			"type": "cargo",
			"command": "clean",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Parsing::Clean"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Service::Parsing::Run"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "Service::Parsing::Test"
		},
		{
			"type": "docker-build",
			"label": "Service::Parsing::Docker::Build",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-parsing-service"
			},
			"group": "build",
			"dependsOn": [
				"Check",
				"Test"
			]
		},
		{
			"type": "shell",
			"label": "Service::Parsing::Docker::SaveTarXz",
			"group": "build",
			"command": [
				"tar cvJf stellarust-parsing-service.tar.xz ./src Config.toml Cargo.toml Dockerfile"
			]
		},
		{
			"type": "shell",
			"label": "Service::Parsing::Docker::SHA256",
			"group": "build",
			"command": [
				"sha256sum",
				"stellarust-parsing-service.tar.xz",
				">",
				"stellarust-parsing-service.sha256"
			]
		},
		{
			"type": "shell",
			"label": "Service::Parsing::Docker::Move",
			"group": "build",
			"command": [
				"mv",
				"stellarust-parsing-service.{tar.xz,sha256}",
				"../../../infrastructure/docker_images"
			]
		},
		{
			"label": "Service::Parsing::Docker::Extract",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Service::Parsing::Docker::Build",
				"Service::Parsing::Docker::SaveTarXz",
				"Service::Parsing::Docker::SHA256",
				"Service::Parsing::Docker::Move",
			]
		}
	]
}