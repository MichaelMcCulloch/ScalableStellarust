{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "SVC::EXTRACTION::Build"
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "SVC::EXTRACTION::Check"
		},
		{
			"type": "cargo",
			"command": "clean",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "SVC::EXTRACTION::Clean"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "SVC::EXTRACTION::Run"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "SVC::EXTRACTION::Test"
		},
		{
			"type": "docker-build",
			"label": "SVC::EXTRACTION::DOCKER::BUILD",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-extraction-service"
			},
			"group": "build",
			"dependsOn": [
				"Check",
				"Test"
			]
		},
		{
			"type": "shell",
			"label": "SVC::EXTRACTION::DOCKER::SAVE_TAR",
			"group": "build",
			"command": [
				"docker",
				"save",
				"stellarust-extraction-service:latest",
				">",
				"stellarust-extraction-service.tar",
			],
		},
		{
			"type": "shell",
			"label": "SVC::EXTRACTION::DOCKER::COMPRESS_XZ",
			"group": "build",
			"command": [
				"xz",
				"-T32",
				"-9",
				"stellarust-extraction-service.tar"
			]
		},
		{
			"type": "shell",
			"label": "SVC::EXTRACTION::DOCKER::MOVE",
			"group": "build",
			"command": [
				"mv",
				"stellarust-extraction-service.tar.xz",
				"../../../infrastructure/docker_images"
			]
		},
		{
			"label": "SVC::EXTRACTION::DOCKER::EXTRACT",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build Docker Image",
				"Save Docker Image To tar",
				"Compress tar",
				"move compressed tarxz to the infrastructure images pool"
			]
		}
	]
}