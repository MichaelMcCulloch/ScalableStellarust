{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Extraction::Build"
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Extraction::Check"
		},
		{
			"type": "cargo",
			"command": "clean",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Service::Extraction::Clean"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Service::Extraction::Run"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "Service::Extraction::Test"
		},
		{
			"type": "docker-build",
			"label": "Service::Extraction::Docker::Build",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-extraction-service"
			},
			"group": "build",
			"dependsOn": [
				"Check",
				"Test"
			]
		},
		{
			"type": "shell",
			"label": "Service::Extraction::Docker::SaveTar",
			"group": "build",
			"command": [
				"docker",
				"save",
				"stellarust-extraction-service:latest",
				">",
				"stellarust-extraction-service.tar",
			],
		},
		{
			"type": "shell",
			"label": "Service::Extraction::Docker::CompressXz",
			"group": "build",
			"command": [
				"xz",
				"-T32",
				"-9",
				"stellarust-extraction-service.tar"
			]
		},
		{
			"type": "shell",
			"label": "Service::Extraction::Docker::SHA256",
			"group": "build",
			"command": [
				"sha256sum",
				"stellarust-extraction-service.tar.xz",
				">",
				"stellarust-extraction-service.sha256"
			]
		},
		{
			"type": "shell",
			"label": "Service::Extraction::Docker::Move",
			"group": "build",
			"command": [
				"mv",
				"stellarust-extraction-service.{tar.xz,sha256}",
				"../../../infrastructure/docker_images"
			]
		},
		{
			"label": "Service::Extraction::Docker::Extract",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Service::Extraction::Docker::Build",
				"Service::Extraction::Docker::SaveTar",
				"Service::Extraction::Docker::CompressXz",
				"Service::Extraction::Docker::SHA256",
				"Service::Extraction::Docker::Move",
			]
		}
	]
}