{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "Svc::Frontend::Npm Build",
		},
		{
			"type": "npm",
			"script": "install",
			"group": "build",
			"problemMatcher": [],
			"label": "Svc::Frontend::Npm Install",
		},
		{
			"type": "npm",
			"script": "start",
			"group": "build",
			"problemMatcher": [],
			"label": "Svc::Frontend::Npm Start",
		},
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"problemMatcher": [],
			"label": "Svc::Frontend::Npm Test",
		},
		{
			"type": "docker-build",
			"label": "Svc::Frontend::Docker::Build",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-frontend-service"
			},
			"group": "build",
		},
		{
			"type": "shell",
			"label": "Svc::Frontend::Docker::SaveTar",
			"group": "build",
			"command": [
				"docker",
				"save",
				"stellarust-frontend-service:latest",
				">",
				"stellarust-frontend-service.tar",
			],
		},
		{
			"type": "shell",
			"label": "Svc::Frontend::Docker::CompressXz",
			"group": "build",
			"command": [
				"xz",
				"-T32",
				"-9",
				"stellarust-frontend-service.tar"
			]
		},
		{
			"type": "shell",
			"label": "Svc::Frontend::Docker::Move",
			"group": "build",
			"command": [
				"mv",
				"stellarust-frontend-service.tar.xz",
				"../../infrastructure/docker_images"
			]
		},
		{
			"label": "Svc::Frontend::Docker::Extract",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Svc::Frontend::Docker::Build",
				"Svc::Frontend::Docker::SaveTar",
				"Svc::Frontend::Docker::CompressXz",
				"Svc::Frontend::Docker::Move",
			]
		}
	]
}