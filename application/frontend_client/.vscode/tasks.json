{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "SVC::FRONTEND::NPM Build",
		},
		{
			"type": "npm",
			"script": "install",
			"group": "build",
			"problemMatcher": [],
			"label": "SVC::FRONTEND::NPM Install",
		},
		{
			"type": "npm",
			"script": "start",
			"group": "build",
			"problemMatcher": [],
			"label": "SVC::FRONTEND::NPM Start",
		},
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"problemMatcher": [],
			"label": "SVC::FRONTEND::NPM Test",
		},
		{
			"type": "docker-build",
			"label": "SVC::FRONTEND::DOCKER::BUILD",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "stellarust-frontend-service"
			},
			"group": "build",
		},
		{
			"type": "shell",
			"label": "SVC::FRONTEND::DOCKER::SAVE_TAR",
			"group": "build",
			"command": [
				"docker",
				"save",
				"stellarust-frontend-service:latest",
				">",
				"stellarust-frontend-service.tar",
			],
		},
		{
			"type": "shell",
			"label": "SVC::FRONTEND::DOCKER::COMPRESS_XZ",
			"group": "build",
			"command": [
				"xz",
				"-T32",
				"-9",
				"stellarust-frontend-service.tar"
			]
		},
		{
			"type": "shell",
			"label": "SVC::FRONTEND::DOCKER::MOVE",
			"group": "build",
			"command": [
				"mv",
				"stellarust-frontend-service.tar.xz",
				"../../infrastructure/docker_images"
			]
		},
		{
			"label": "SVC::FRONTEND::DOCKER::EXTRACT",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build Docker Image",
				"Save Docker Image To tar",
				"Compress tar",
				"move compressed tarxz to the infrastructure images pool"
			]
		}
	]
}